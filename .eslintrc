{
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "^16.8.6"
    }
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "classes": true,
      "legacyDecorators": true
    }
  },
  "rules": {
    "no-multi-spaces": "warn",
    "semi": [
      "warn",
      "never"
    ],
    "padded-blocks": 0,
    "comma-dangle": [
      "warn"
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "brace-style": "warn",
    "no-unused-vars": [
      "warn"
    ],
    "max-len": [
      "warn",
      120,
      4,
      {
        "ignoreComments": true
      }
    ],
    "space-infix-ops": "warn",
    "no-trailing-spaces": "warn",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "no-extra-semi": "warn",
    "no-extra-boolean-cast": "warn",
    "no-console": "warn",
    "key-spacing": [
      "warn",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "semi-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-function-paren": [
      "warn",
      {
        "asyncArrow": "always",
        "named": "never",
        "anonymous": "never"
      }
    ],
    "space-before-blocks": [
      "warn"
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 2,
        "maxEOF": 1,
        "maxBOF": 1
      }
    ],
    "spaced-comment": [
      "warn",
      "always"
    ],
    "jsx-quotes": [
      "warn",
      "prefer-double"
    ],
    "react/jsx-uses-vars": [
      2
    ],
    "react/jsx-no-duplicate-props": "warn",
    "react/display-name": 0,
    "react/jsx-indent": [
      "warn",
      2,
      {
        "indentLogicalExpressions": true
      }
    ],
    "react/jsx-indent-props": [
      "warn",
      2
    ],
    "react/jsx-closing-bracket-location": "warn",
    "react/jsx-curly-spacing": [
      "warn",
      "never"
    ],
    "react/jsx-key": "warn",
    "react/jsx-tag-spacing": [
      "warn",
      {}
    ],
    "react/jsx-no-undef": "error",
    "react/jsx-pascal-case": "warn",
    "react/jsx-wrap-multilines": "warn",
    "react/jsx-no-bind": 0,
    "react/jsx-equals-spacing": [
      "warn",
      "never"
    ],
    "react/prop-types": "off",
    "react-hooks/exhaustive-deps": "off"
  },
  "globals": {
    "onmessage": true,
    "postMessage": true,
    "Promise": true
  }
}